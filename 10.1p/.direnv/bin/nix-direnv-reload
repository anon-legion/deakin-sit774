#!/usr/bin/env bash
set -e
if [[ ! -d "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p/.envrc" "/home/thecomeback/Desktop/projects/deakin/sit774/10.1p/.direnv"/*.rc
