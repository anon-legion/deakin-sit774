<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>All Feedback</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
<%- include('partials/navbar') %>

<!-- Header -->
<%- include('partials/header', { companyName: companyName }) %>

<!-- Main Form -->
<main class="flex-fill">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-primary">Feedback Summary</h1>

            <label for="progress-5star"><b>5 star</b></label>
            <div class="progress px-0 mb-3" id="progress-5star" role="progressbar">
                <div class="progress-bar bg-success"
                     style="width: <%= (feedbacks.filter((f) => f.rating === 5).length / feedbacks.length) * 100 %>%"><%= (feedbacks.filter((f) => f.rating === 5).length / feedbacks.length) * 100 %>
                    %
                </div>
            </div>
            <label for="progress-4star"><b>4 star</b></label>
            <div class="progress px-0 mb-3" id="progress-4star" role="progressbar">
                <div class="progress-bar bg-primary"
                     style="width: <%= (feedbacks.filter((f) => f.rating === 4).length / feedbacks.length) * 100 %>%"><%= (feedbacks.filter((f) => f.rating === 4).length / feedbacks.length) * 100 %>
                    %
                </div>
            </div>
            <label for="progress-3star"><b>3 star</b></label>
            <div class="progress px-0 mb-3" id="progress-3star" role="progressbar">
                <div class="progress-bar bg-info"
                     style="width: <%= (feedbacks.filter((f) => f.rating === 3).length / feedbacks.length) * 100 %>%"><%= (feedbacks.filter((f) => f.rating === 3).length / feedbacks.length) * 100 %>
                    %
                </div>
            </div>
            <label for="progress-2star"><b>2 star</b></label>
            <div class="progress px-0 mb-3" id="progress-2star" role="progressbar">
                <div class="progress-bar bg-warning"
                     style="width: <%= (feedbacks.filter((f) => f.rating === 2).length / feedbacks.length) * 100 %>%"><%= (feedbacks.filter((f) => f.rating === 2).length / feedbacks.length) * 100 %>
                    %
                </div>
            </div>
            <label for="progress-1star"><b>1 star</b></label>
            <div class="progress px-0 mb-3" id="progress-1star" role="progressbar">
                <div class="progress-bar bg-danger"
                     style="width: <%= (feedbacks.filter((f) => f.rating === 1).length / feedbacks.length) * 100 %>%"><%= (feedbacks.filter((f) => f.rating === 1).length / feedbacks.length) * 100 %>
                    %
                </div>
            </div>
            <hr/>
            <h1>Individual Feedbacks</h1>
            <% feedbacks.forEach(function(feedback) { %>
                <div class="card shadow-sm border-1 rounded-3 mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-1"> <%= feedback.name; %> –
                            <% for (var i = 0; i < feedback.rating; i++) { %>⭐
                            <% } %>
                        </h5>
                        <p class="text-muted mb-2">
                            <strong>Item:</strong> <%= feedback.item; %> |
                            <strong>Date:</strong> <%= new Date(feedback.date).toISOString().slice(0, 10); %>
                        </p>
                        <p class="card-text"><%= feedback.message; %></p>
                        <p class="text-muted small mb-0">Email: <%= feedback.email; %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</main>

<!-- Footer -->
<%- include('partials/footer', { address: address }) %>

</body>
</html>
