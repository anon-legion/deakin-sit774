<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title><%= title || '' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background: linear-gradient(120deg, #f6d365, #fda085);
      }

      .form-card {
        background-color: #ffffffdd;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }

      .form-label {
        font-weight: 500;
      }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Header -->
<%- include('partials/header', { companyName: companyName }) %>

<!-- Main Form -->
<main class="flex-fill">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <% if (validationErrors.length > 0) { %>
                    <h2 class="mb-4 text-center text-danger">PAYLOAD VALIDATION FAIL</h2>

                    <div class="alert alert-danger">
                        <h4 class="alert-heading"><%= validationErrors.length %> Error(s) Found:</h4>
                        <ul>
                            <% validationErrors.forEach(function(error) { %>
                                <li><%= error %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                <div class="form-card">
                    <h2 class="mb-4 text-center text-primary">Feedback Form</h2>

                    <form id="feedbackForm" action="/submit-feedback/<%= reqId %>" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= payload.name %>">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" class="form-control"
                                   value="<%= payload.email %>">
                        </div>

                        <div class="mb-3">
                            <label for="item" class="form-label">Item Name</label>
                            <select id="item" name="item" class="form-select">
                                <option value="" disabled selected>Select an item...</option>
                                <% items.forEach(function(item) { %>
                                    <option value="<%= item %>" <%= item === payload.item ? 'selected' : '' %>><%= item %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="date" class="form-label">Date Purchased</label>
                            <input type="date" id="date" name="date" class="form-control" value="<%= payload.date %>">
                        </div>

                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <select class="form-select" id="rating" name="rating">
                                <option value="" disabled selected>Choose rating</option>
                                <option value="1" <%= payload.rating === '1' ? 'selected' : '' %>>⭐</option>
                                <option value="2" <%= payload.rating === '2' ? 'selected' : '' %>>⭐⭐</option>
                                <option value="3" <%= payload.rating === '3' ? 'selected' : '' %>>⭐⭐⭐</option>
                                <option value="4" <%= payload.rating === '4' ? 'selected' : '' %>>⭐⭐⭐⭐</option>
                                <option value="5" <%= payload.rating === '5' ? 'selected' : '' %>>⭐⭐⭐⭐⭐</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea id="message" name="message" rows="4" class="form-control"
                                      placeholder="Your feedback..."><%= payload.message %></textarea>
                        </div>

                        <button type="submit"
                                class="btn btn-success w-100" <%= isSubmitDisabled ? 'disabled' : '' %>>Submit
                            Feedback
                        </button>
                    </form>
                </div>

                <div class="form-card mt-4">
                    <form id="captchaForm" action="">
                        <div class="mb-3 row">
                            <img id="captchaImg" src="/captcha/<%= reqId %>" alt="CAPTCHA"
                                 class="col rounded">
                        </div>
                        <div class="mb-3 row">
                            <label for="captchaModalInput" class="text-start col">Please enter the code matched from the
                                image</label>
                            <div class="col align-content-center">
                                <input type="text" id="captchaModalInput" class="form-control w-auto d-inline-block"
                                       placeholder="Enter code shown above">
                            </div>
                        </div>
                        <div class="mb-3 d-flex justify-content-evenly">
                            <button class="btn btn-primary" id="submitCaptchaBtn">Submit</button>
                            <button class="btn btn-primary" id="resetCaptchaBtn">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<%- include('partials/footer', { address: address }) %>

<script>
  document.getElementById('resetCaptchaBtn').addEventListener('click', function (e) {
    e.preventDefault()
    const captchaImg = document.getElementById('captchaImg');
    captchaImg.src = `/captcha/<%= reqId %>?t=${new Date().getTime()}`;
  });

  document.getElementById('submitCaptchaBtn').addEventListener('click', function (e) {
    e.preventDefault()
    const userInput = document.getElementById('captchaModalInput')?.value.trim();

    if (!userInput) {
      alert('Please enter the CAPTCHA code.');
      return;
    }

    const form = document.getElementById('feedbackForm');
    const action = form.action;
    form.action = `${action}?captcha=${encodeURIComponent(userInput)}`;
    form.submit();
  });
</script>
</body>
</html>
